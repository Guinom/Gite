<!DOCTYPE html>
<html lang="en">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('bundles/tutowelcome/css/welcome.css') }}" type="text/css" media="all" />
        {% endblock %}
        <title>Tutoriel Symfony2 : {% block title %}{% endblock %}</title>
    </head>
    <body>
        <div id="container">
            <header>
				<ul>
					<li><a href="{{ path('homepage') }}" title="Retour à l'accueil">Tutoriel Symfony2</a></li>
					<li><a href="{{ path('homepage') }}" title="Retour à l'accueil">Tutoriel Symfony2</a></li>
				</ul>
                <p>
					{% for key, flash in app.session.flashBag.get('notice') %}
						{% if flash %}
							{{flash}}
						{% endif %}
					{% endfor %}
				</p>
            </header>

            <div id="content">
                {% block content %}{% endblock %}
            </div>
			<div id="form">
				<form action="{{ path('homepage') }}" method="post" {{ form_enctype(form) }}>
					{{ form_widget(form) }}

					{{ form_rest(form) }}

					<input type="submit" />
				</form>
			</div>
            <footer>
            </footer>
        </div>
    </body>
</html>